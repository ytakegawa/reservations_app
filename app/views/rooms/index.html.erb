<p id="notice"><%= notice %></p>

<h1><%= t :rooms %></h1>

<table>
  <thead>
    <tr>
      <th><%= t :name %></th>
      <th><%= t :place %></th>
      <th><%= t :number %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
    <tr>
      <td><%= room.name %></td>
      <td><%= room.place %></td>
      <td><%= room.number %></td>
      <td><%= link_to t('button.show'), room %></td>
      <td><%= link_to t('button.edit'), edit_room_path(room) %></td>
      <td><%= link_to t('button.destroy'), room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
